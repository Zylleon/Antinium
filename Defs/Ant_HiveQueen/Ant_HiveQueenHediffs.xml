<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <HediffDef>								<!-- for the Queen herself -->
    <defName>Ant_HiveQueenHediff</defName>
	<initialSeverity>1</initialSeverity>
	<isBad>false</isBad>
	<everCurableByItem>false</everCurableByItem>
	<label>Hive Queen</label>
	<!--<hediffClass>AntiniumRaceCode.Hediff_HiveQueen</hediffClass>-->
	<!--<comps>-->
    <!-- <li Class="AntiniumRaceCode.CompProperties_HiveQueenPresence" />-->
    <!--</comps>-->
	
    <stages>
      <li>
        <becomeVisible>true</becomeVisible>
		<hungerRateFactorOffset>0.8</hungerRateFactorOffset>
        <capMods>
			<li>
				<capacity>Moving</capacity>
				<postFactor>0.8</postFactor>
			</li>
	    </capMods>
      </li>
    </stages>
  </HediffDef>


<HediffDef>
    <defName>Ant_RoyalLarvaHediff</defName>
	<initialSeverity>1</initialSeverity>
	<label>Royal Larva</label>
	<isBad>false</isBad>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
		<hungerRateFactorOffset>1.5</hungerRateFactorOffset>
        <capMods>
			<li>
				<capacity>Moving</capacity>
				<postFactor>0</postFactor>
			</li>
	    </capMods>
      </li>
    </stages>
  </HediffDef>
  
  

  <HediffDef>								<!-- the Queen's followers -->
    <defName>Ant_HiveQueenInspHediff</defName>
	<initialSeverity>1</initialSeverity>
	<isBad>false</isBad>
	<label>royal presence</label>
	<hediffClass>HediffWithComps</hediffClass>
	<comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>12000</min>
          <max>12000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
	
      <li>
        <label>minor</label>
		<capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.05</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.05</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.05</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
	  
      <li>
        <minSeverity>0.60</minSeverity>
        <label>Major</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>0.1</offset>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.1</offset>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
	  
    </stages>
  </HediffDef>


</Defs>